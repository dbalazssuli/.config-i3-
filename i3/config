#terminal
	bindsym $mod+Return exec kitty


#firefox
	bindsym $mod+y exec firefox


#discord
	bindsym $mod+x exec flatpak run com.discordapp.Discord


#kill
	bindsym $mod+q kill


#wallpaper
	bindsym $mod+Shift+p exec wal -i /home/h/Wallpapers/


#i3lock
	bindsym $mod+Ctrl+l exec i3lock -c 000000


