#font
	font pango:Agave Nerd Font Mono 13


#mod button
	set $mod Mod4


# window borders
	for_window [class=".*"] border pixel 7


#toggle border
	bindsym $mod+Shift+b border toggle


#gaps
	gaps inner 10


#reload config
        bindsym $mod+Shift+c reload


#restart i3
        bindsym $mod+Shift+r restart   


#log out
        bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'do you want to exit ?' -B ' exit' 'i3-msg exit' "


